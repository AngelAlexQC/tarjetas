# =====================================
# APP CONFIGURATION - LibelulaSoft
# =====================================
APP_NAME=Tarjetas
APP_SLUG=tarjetas
APP_VERSION=1.0.0

# =====================================
# BUNDLE IDENTIFIERS
# =====================================
APP_BUNDLE_ID_IOS=com.libelulasoft.tarjetas
APP_BUNDLE_ID_ANDROID=com.libelulasoft.tarjetas
APP_SCHEME=tarjetas

# =====================================
# TENANT CONFIGURATION
# =====================================
# Leave empty for multi-tenant selector
# Set to specific tenant slug for single-tenant white-label builds
TENANT_ID=

# =====================================
# API CONFIGURATION
# =====================================
# URL del backend en desarrollo (opcional, default: localhost:3000)
EXPO_PUBLIC_API_URL_DEV=http://localhost:3000/api
# URL del backend en producción (REQUERIDO para builds de producción)
EXPO_PUBLIC_API_URL=https://api.libelulasoft.com/api
# Desactivar mock API en desarrollo (default: usa mock)
# EXPO_PUBLIC_USE_MOCK=false

# =====================================
# DEVELOPMENT ONLY
# =====================================
# Código OTP para modo mock (solo desarrollo, default: 000000)
# EXPO_PUBLIC_MOCK_OTP=000000

# =====================================
# FEATURE FLAGS
# =====================================
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASHLYTICS=false
